/* pages/home/home.wxss */
.scroll-area {
  flex: 1;
  background: gold;
}

.head-image {
  width: 100%;
  height: 320rpx;
  background: linear-gradient(to bottom, rgba(255, 215, 0, 0.4), rgba(255, 215, 0, 1)), url('/assets/symbols.alchemy.jpeg');
  background-size: cover;
}

.alchemist-space {
  padding-left: 10rpx;
  padding-right: 10rpx;
  width: 100%;
  display: flex;
}

.avatar {
  width: 30%;
  height: 300rpx;
  background: url('/assets/Champion-Gump.avatar.jpeg');
  background-size: cover;
  border-radius: 20rpx;
}

.alchemist-info {
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.home-site {
  display: flex;
  padding: 10rpx;
  padding-left: 20rpx;
  background: radial-gradient(circle at center, greenyellow, rgba(255, 215, 0, 1));
  color: olive;
  font-size: 23rpx;
  border-radius: 20rpx;
}

.blog {
  margin-top: 20rpx;
  display: flex;
  padding: 10rpx;
  padding-left: 20rpx;
  background: radial-gradient(circle at center, goldenrod, rgba(255, 215, 0, 1));
  color: olive;
  font-size: 20rpx;
  border-radius: 5rpx;
}

.url {
  font-style: italic;
}

.alchemist-tags {
  margin-top: 30rpx;
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}

.alchemist-tag {
  font-weight: 400;
}

.ai-header {
  margin-top: 50rpx;
  width: 100%;
  height: 320rpx;
  background: radial-gradient(circle at center, rgba(255, 215, 0, 0.5), rgba(255, 215, 0, 1)), url('/assets/ai-header.jpeg');
  background-size: cover;
}

.ai-area {
  flex: 1;
  display: flex;
  justify-content: space-between;
  color: purple;
}

.digital-man-area {
  flex: 0.4;
  height: 300rpx;
  padding: 5rpx;
  background: radial-gradient(circle at center, rgba(255, 215, 0, 0), rgba(255, 215, 0, 1)), url('/assets/digital-man.jpg');
  background-size: cover;
}

.tts-area {
  flex: 0.58;
  height: 300rpx;
  padding: 5rpx;
  background: radial-gradient(circle at center, rgba(255, 215, 0, 0), rgba(255, 215, 0, 1)), url('/assets/tts.jpg');
  background-size: cover;
}

.footer {
  padding: 50rpx;
  padding-top: 2000rpx;
  padding-bottom: 100rpx;
}

.finish-word {
  color: goldenrod;
  letter-spacing: 2rpx;
  word-spacing: 5rpx;
  text-align: center;
  line-height: 60rpx;
}